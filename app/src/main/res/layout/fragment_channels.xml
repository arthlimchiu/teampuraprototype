<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="symph.teampuraprototype.fragments.ChannelsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channels_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="8dp"/>

    <!--<com.github.clans.fab.FloatingActionButton-->
        <!--android:id="@+id/fab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom|end"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:src="@drawable/ic_add_white_24dp"-->
        <!--fab:fab_colorNormal="@color/colorAccent"/>-->

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/channel_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_add_white_24dp"
        fab:menu_colorNormal="@color/colorAccent">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_create_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_build_white_24dp"
            fab:fab_label="Create Channel"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/colorAccent"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_join_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_white_24dp"
            fab:fab_label="Join Channel"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/colorAccent"/>


    </com.github.clans.fab.FloatingActionMenu>
</FrameLayout>

